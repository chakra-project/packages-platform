# $Id: PKGBUILD 54597 2009-10-11 11:24:35Z andyrtr $
#Maintainer: Jan de Groot <jgc@archlinux.org>

pkgname=libxt
pkgver=1.0.7
pkgrel=1
pkgdesc="X11 toolkit intrinsics library"
arch=(i686 x86_64)
url="http://xorg.freedesktop.org/"
license=('custom')
depends=('libsm' 'libx11')
makedepends=('pkgconfig')
options=('!libtool')
source=(${url}/releases/individual/lib/libXt-${pkgver}.tar.bz2)
md5sums=('96f3c93434a93186d178b60d4a262496')

build() {
  cd "${srcdir}/libXt-${pkgver}"
  ./configure --prefix=/usr --sysconfdir=/etc --disable-static \
      --disable-install-makestrs || return 1
  make || return 1
  make DESTDIR="${pkgdir}" install || return 1

# install custom license
  install -Dm644 "${srcdir}/libXt-${pkgver}/COPYING" \
      "${pkgdir}/usr/share/licenses/${pkgname}/COPYING" || return 1
}
